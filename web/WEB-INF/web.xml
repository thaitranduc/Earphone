<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>RequestListener</description>
        <listener-class>thaitd.servlets.RequestServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>CrawlWebServlet</servlet-name>
        <servlet-class>thaitd.servlets.CrawlWebServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessServlet</servlet-name>
        <servlet-class>thaitd.servlets.ProcessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrawlWebServlet</servlet-name>
        <url-pattern>/CrawlWebServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessServlet</servlet-name>
        <url-pattern>/ProcessServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
